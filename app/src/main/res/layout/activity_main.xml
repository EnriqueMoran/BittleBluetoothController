<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:keepScreenOn="true"
    android:background="@drawable/gradient_1"
    tools:context=".MainActivity">

    <com.example.petoibittlebluetoothcontroller.JoystickView
        android:id="@+id/joystickLeft"
        android:layout_width="208dp"
        android:layout_height="206dp"
        android:layout_weight="1"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="205dp" />

    <Button
        android:id="@+id/btRest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rest"
        tools:layout_editor_absoluteX="504dp"
        tools:layout_editor_absoluteY="119dp" />

    <Button
        android:id="@+id/btGyro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gyro"
        tools:layout_editor_absoluteX="504dp"
        tools:layout_editor_absoluteY="312dp" />

    <Button
        android:id="@+id/btStep"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Step"
        tools:layout_editor_absoluteX="504dp"
        tools:layout_editor_absoluteY="225dp" />

    <Button
        android:id="@+id/btCrawl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crawl"
        tools:layout_editor_absoluteX="622dp"
        tools:layout_editor_absoluteY="225dp" />

    <Button
        android:id="@+id/btDisconnect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Disconnect"
        tools:layout_editor_absoluteX="622dp" />

    <Button
        android:id="@+id/btTrot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Trot"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="52dp" />

    <Button
        android:id="@+id/btWalk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Walk"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="128dp" />

    <Button
        android:id="@+id/btStand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:text="Stand"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteY="296dp" />

    <ProgressBar
        android:id="@+id/idProgressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/idConnectingBluetooth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/amiko"
        android:text="@string/connectig_bluetooth"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/idProgressBar" />


</androidx.constraintlayout.widget.ConstraintLayout>